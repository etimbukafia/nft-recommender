{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ] // Include custom types
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}